---
import Layout from "@layouts/app.astro";

import { fetchTasks } from "@/src/data";

const tasks = await fetchTasks();
---

<Layout title="Tasks">
  {tasks.length === 0 && <p>No tasks found</p>}

  {
    tasks.length > 0 &&
      tasks.map((task) => (
        <div class="flex">
          <div class="p-2 mt-0.5">
            <form
              action={"/app/tasks/" + task.id + "/toggle"}
              method="POST"
              style="margin: 0;"
            >
              <input
                type="checkbox"
                {...(task.done && { checked: "true" })}
                onchange="this.form.submit()"
              />
            </form>
          </div>
          <div class="p-2 flex-1 w-full">{task.title}</div>
          <div class="p-2">{task.category_name || ""}</div>
          <div class="p-2">
            <form action={"/app/tasks/" + task.id + "/delete"} method="POST">
              <button
                type="submit"
                class="bg-gray-500 text-white text-xs px-1 py-0.5 font-mono rounded-sm cursor-pointer"
                onclick={
                  "return confirm('Are you sure you want to delete this task?')"
                }
              >
                Delete
              </button>
            </form>
          </div>
        </div>
      ))
  }
</Layout>
